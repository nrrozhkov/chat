{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">12"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start-preview": "tsc && vite build && vite preview",
    "start": "npm run build && node server.js",
    "test": "mocha",
    "prepare": "husky install",
    "lint:ts": "eslint \"**/*.{ts,tsx}\"",
    "lint:ts:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "lint:style": "npx stylelint **/*.scss",
    "lint:style:fix": "npx stylelint **/*.scss --fix"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "npm run lint:ts:fix",
      "npm run test"
    ],
    "*.{scss, css}": [
      "npm run lint:style:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/chai": "4.3.16",
    "@types/express": "4.17.21",
    "@types/mocha": "10.0.6",
    "@types/node": "20.11.30",
    "@types/sinon": "17.0.3",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.4.0",
    "chai": "5.1.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.3",
    "jsdom": "24.1.0",
    "lint-staged": "15.2.5",
    "mocha": "10.4.0",
    "prettier": "3.2.5",
    "sass": "1.72.0",
    "sinon": "18.0.0",
    "stylelint": "16.5.0",
    "stylelint-config-standard-scss": "13.1.0",
    "ts-node": "10.9.2",
    "typescript": "5.4.3",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "express": "^4.21.2",
    "handlebars": "4.7.8",
    "uuid": "9.0.1"
  }
}
