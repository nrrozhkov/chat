{{#> Dialog }}
<form class="register-page">
    <div class="register-page__content">
        {{> PageTitle title="Регистрация" }}
        {{> InputField className="register-page__input" title="Почта" name="email" type="email" }}
        {{> InputField className="register-page__input" title="Логин" name="login" type='text' }}
        {{> InputField className="register-page__input" title="Имя" name="first_name" }}
        {{> InputField className="register-page__input" title="Фамилия" name="second_name" }}
        {{> InputField className="register-page__input" title="Телефон" name="phone" }}
        {{> InputField className="register-page__input" title="Пароль" name="password" type="password" }}
        {{> InputField className="register-page__input" title="Пароль (ещё раз)" name="password" type="password" }}
    </div>
    <div class="register-page__footer">
        {{> Button text="Зарегистрироваться" page="chat" }}
        {{> Link text="Войти" page="chat" }}
    </div>
</form>
{{/ Dialog }}
